<div>
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice.html_safe %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>

<h2><%= @cocktail.name %></h2>
<div class="mb-4">
  <%= link_to cocktails_path do %>
    &larr; Back to list
  <% end %>
</div>

<div class="card-recipe">
  <h5>Ingredients:</h5>

  <% if alert.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= alert.html_safe %>

      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <% if @cocktail.doses.any? %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete,
            data: { confirm: 'Really?!', toggle: 'tooltip', placement: 'top' },
            title: 'Delete ingredient',
            class: 'text-danger' do %>
            <small><i class="fa fa-trash"></i></small>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="empty-state">
      No ingredients added, please use the button below to add new ingredients to
      your cocktail.
    </p>
  <% end %>

  <div>
    <%= link_to new_cocktail_dose_path(@cocktail.id), class: 'btn btn-sm btn-outline-secondary' do %>
     <i class="fa fa-plus"></i> Add ingredient dose
    <% end %>
  </div>
</div>




<img src="http://res.cloudinary.com/haz3lstar/image/upload/v1604669897/zoltan-tasi-X75dTgoQ2Hs-unsplash_dxxp7h.jpg" class="background-show-image">
<div class="cocktail-show">
  <div>
    <% if notice.present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice.html_safe %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>

  <h2><%= @cocktail.name %></h2>
  <div class="mb-4">
    <%= link_to cocktails_path do %>
      &larr; Back to list
    <% end %>
  </div>

  <div class="card-recipe">
    <%#= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <img src="http://res.cloudinary.com/haz3lstar/image/upload/v1604787366/great-cocktails-9PyQwwmZxpI-unsplash_h2bewm.jpg" alt="Modern picture of a cocktail drink" width="350vh">
    <div>
      <h5 id="ingredient">Ingredients</h5>
      <% if alert.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= alert.html_safe %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <div class="ingredients-list">
        <% if @cocktail.doses.any? %>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li>
                <%= dose.description %> <%= dose.ingredient.name %>
                <%= link_to dose_path(dose), method: :delete,
                  data: { confirm: 'Really?!', toggle: 'tooltip', placement: 'top' },
                  title: 'Delete ingredient',
                  class: 'text-danger' do %>
                  <small><i class="fa fa-trash"></i></small>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="empty-state">
            No ingredients added, please use the button below to add new ingredients to
            your cocktail.
          </p>
        <% end %>
        <%= link_to new_cocktail_dose_path(@cocktail.id), class: 'btn btn-sm btn-outline-success' do %>
          <i class="fa fa-plus"></i> Add ingredient
        <% end %>
      </div>
    </div>
  </div>

</div>




